    
{
    "extends": [
      "tslint:recommended",
      "tslint-eslint-rules"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**",
        "build/**"
      ]
    },
    "rules": {
      "semicolon": true,
      "indent": [true, "spaces", 2],
      "quotemark": [true, "single", "avoid-escape", "avoid-template"],
      "no-console": false,
      "interface-name": false,
      "max-line-length": [true, 150]
    }
  }